// https://www.typescriptlang.org/docs/handbook/compiler-options.html
{
  // "extends": "",
  "include": [
    "src/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "compilerOptions": {
    "module": "es6", // Use the ES2015 module
    "target": "es6", // Compile to ES2015 (Babel will do the rest)
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true, // Default export references are allowed
    "esModuleInterop": true, // Callable CommonJS modules must be imported as default. Exports without default do not need * as xx anymore
    "jsx": "preserve", // Use the Babel transform
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "types": [
      "node"
    ]
  }
}
